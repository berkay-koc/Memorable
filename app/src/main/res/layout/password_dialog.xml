<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/passwordDialogText"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:inputType="textPassword"
        android:imeOptions="actionNext"
        android:textSize="24sp"
        android:hint="@string/password"/>
    <ImageView
        android:id="@+id/eyeImage"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_baseline_remove_red_eye"
        app:layout_constraintStart_toEndOf="@id/passwordDialogText"
        app:layout_constraintTop_toTopOf="@id/passwordDialogText"
        android:layout_marginTop="10dp"/>
    <Button
        android:layout_marginStart="5dp"
        android:id="@+id/setButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/passwordDialogText"
        app:layout_constraintTop_toBottomOf="@id/passwordDialogText"
        android:layout_marginTop="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>